doctype html
html
  head
    title EZL
    link(rel="stylesheet", href="/stylesheets/bootstrap/bootstrap.css")
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/childcss/home.css')
    link(rel='stylesheet', href='/stylesheets/childcss/header_main.css')
    link(rel='stylesheet', href='/summernote/summernote.css')
    script(src="/javascripts/jquery.js")
    script(src="/javascripts/bootstrap/bootstrap.min.js")
    script(src="/summernote/summernote.js")
    script(src="/javascripts/main.js")
    script(src="/javascripts/childjs/home.js")

  body
    include header_main
    .container
      #carousel.carousel.slide(data-ride="carousel")
        ol.carousel-indicators
          li(data-target="#carousel",data-slide-to="0").active
          li(data-target="#carousel",data-slide-to="1")
          li(data-target="#carousel",data-slide-to="2")
        .carousel-inner(role="listbox")
          .item.active
            img(src="/images/rbk.jpg",alt="first slide",height="300px")
            .carouel-caption
              p EzLife
          .item
            img(src="/images/ta.jpg",alt="sec slide",height="300px")
            .carouel-caption
              p EzLife2
          .item
            img(src="/images/wr.jpg",alt="3 slide",height="300px")
            .carouel-caption
              p EzLife3         
        a.left.carousel-control(href="#carousel",role="button",data-slide="prev")
          span.glyphicon.glyphicon-chevron-left(aria-hidden="true")
          span.sr-only Previous
        a.right.carousel-control(href="#carousel",role="button",data-slide="next")
          span.glyphicon.glyphicon-chevron-right(aria-hidden="true")
          span.sr-only Next

      #orderModal.modal.fade.bs-example-modal-lg(tabindex="-1", role="dialog", aria-labelledby="orderModalLabel",style="display:none")
        .modal-dialog.modal-lg(role="document")
          .modal-content
            .modal-header
              button.close(type="button",data-dismiss="modal", aria-label="Close")
                span(aria-hidden="true") x
              h4.black#orderModalLabel.modal-title Question Card
            .modal-body.black
              h5 Discription
              #summernote
              
              h5 Estimate Time
              .btn-group(role="group")#time
                button.btn.btn-sm.btn-default 0.5h
                button.btn.btn-sm.btn-default 1h
       
            .modal-footer
              button.btn.btn-danger(data-dismiss="modal") Cancle
              button.btn.btn-success#sendQuestion Send 

      #teacherInfos
        each val,index in data
          .teacherCard
            img.avatar-teacher(src="/images/teacher.jpg",width="150px",height="150px")
            .rightSide
              p
                span.name=val.profile.name
                span.rating=val.rating
              p.school=val.profile.school
              p.major=val.profile.major
              p.special=val.profile.speical
              p.price $#{val.profile.price}
              .tags
                - if(val.tags)
                  each v,i in val.tags
                    button.btn.btn-xs.btn-dark #{v}
            .introduction
              p=val.profile.introduction
            .certifications
              p <本站专业顶级认证>  <上海十佳青年帅哥>
            .order
              button.btn.btn-success.btn-order order
